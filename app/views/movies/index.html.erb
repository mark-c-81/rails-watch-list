<div class="container">
	<div class="row">
		<% @movies.each do |movie| %>
			<div class="col-4">
				<div class="card">
					<%= image_tag movie.poster_url %>
					<div class="card-body">
						<h3 class="card-title"><%= movie.title %></h3>
						<p class="card-text"><%= movie.overview %></p>
						<h5><% movie.rating %></h5>
					</div>
				</div>
			</div>	
		<% end %>
	</div>
</div>
